<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Login</h2>
            <form action="/login" method="post">
            {{#if loginErr}}
            <p class="error">Invalid user name or password</p>
            {{/if}}
                <div class="form-group">
                    <label for="tEmail1">Email address</label>
                    <input type="email" class="form-control" name="email" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="Password1">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password">
                </div>
                <a href="/signup">Create new account?</a>
                <button type="submit" class="btn btn-primary mt-2 d-md-flex justify-content-md-end">Login</button>
            </form>
        </div>
    </div>
</div>