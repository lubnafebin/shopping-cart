<div class="card mt-50 mb-50">
    <div class="col d-flex"><span class="text-muted" id="orderno">order #{{order._id}}</span></div>
    <div class="title mx-auto"> Thank you for your order! </div>
    <div class="main"> <span id="sub-title">
            <p><b>Payment Summary</b></p>
        </span>
        {{!-- Orders start --}}
        {{#each order.products}}
        <div class="row row-main">
            <div class="col-3"> <img class="img-fluid" src="https://i.imgur.com/qSnCFIS.png"> </div>
            <div class="col-6">
                <div class="row d-flex">
                    <p><b>{{this.name}}</b></p>
                </div>
                <div class="row d-flex">
                    <p class="text-muted">Set: {{this.quantity}}</p>
                </div>
            </div>
            <div class="col-3 d-flex justify-content-end">
                <p><b>{{this.price}}</b></p>
            </div>
        </div>
        <hr>
        {{/each}}
        {{!-- Orders end --}}
        <div class="total">
            <div class="row">
                <div class="col"> <b> Total:</b> </div>
                <div class="col d-flex justify-content-end"> <b>{{order.totalAmount}}</b> </div>
            </div> <button class="btn btn-success d-flex mx-auto mt-3"> Track your order </button>
        </div>
    </div>
</div>
