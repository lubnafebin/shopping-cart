<section>
  <div class="container">
    <div class="d-grid d-md-flex justify-content-md-end mt-4">
      <a href="admin/add-product" class="btn btn-primary btn-sm ml-auto">Add product</a>
    </div>
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Catogary</th>
          <th scope="col">Discription</th>
          <th scope="col">Price</th>
          <th>Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">{{@index}}</th>
          <td>{{this.name}}</td>
          <td>{{this.catogary}}</td>
          <td>{{this.description}}</td>
          <td>{{this.price}}</td>
          <td><img style="width:50px; height: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
          <td>
            <a href="/admin/edit-product{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/delete-product{{this._id}}" class="btn btn-danger" onclick="return confirm('do you want to delete {{this.name}}')">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>